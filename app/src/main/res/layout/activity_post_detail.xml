<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exkulo.banciyuan.ui.ui.PostDetailActivity"
    android:background="@color/bg_white"
    android:orientation="vertical"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_post_detail_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_main_theme_bg_white"
        />

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_post_detail_tb"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:layout_width="match_parent"
        android:minHeight="@dimen/abc_action_bar_default_height_material"
        android:background="@android:color/transparent"
        android:elevation="4dp"
        android:titleTextColor="@color/accent_pink"
        />
</merge>
