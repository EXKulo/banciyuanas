<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exkulo.banciyuan.ui.ui.PictureDetailActivity"
    >

    <ImageView
        android:id="@+id/activity_picture_detail_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="@string/transition_home_post_to_detail"
        android:background="@color/app_main_theme_bg_white"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/activity_picture_detail_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:backgroundTint="@color/dark_pink"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:src="@mipmap/material_download"
        />

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/picture_detail_indeterminate_progress_library"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal|bottom"
        android:indeterminate="true"
        style="@style/Widget.MaterialProgressBar.ProgressBar" />

</RelativeLayout>
